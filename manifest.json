{
  "manifest_version": 3,
  "name": "Diafox",
  "version": "1.0",

  "description": "Porting Dia Browser experience to Firefox",

  "icons": {
    "48": "icons/icon_48x48.png",
    "96": "icons/icon_big.png"
  },

  "sidebar_action": {   
        "default_icon": "icons/icon_48x48.png",
        "default_title": "DiaFox",
        "default_panel": "sidebar/panel.html"
    },

    "permissions": ["storage", "tabs", "cookies"],

    "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      }
    }
  },

  "action": {
    "default_icon": {
      "48": "icons/icon_48x48.png"
    },
    "default_title": "DiaFox Settings",
    "default_popup": "popup/settings.html"
  }
}
